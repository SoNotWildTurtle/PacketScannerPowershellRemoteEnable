        \$dnsPacket.IP = [System.Net.IPAddress]::NetworkToHostOrder([System.BitConverter]::ToInt32(\$data[0..3], 0))
        \$dnsPacket.UDP = [System.BitConverter]::ToUInt16(\$data[4..5], 0)
